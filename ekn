#!/bin/bash

# eknova CLI Development Runner
# This script builds and runs the eknova CLI for quick testing during development

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Change to the CLI directory
cd "$(dirname "$0")/eknova-cli"

echo -e "${YELLOW}ğŸ”¨ Building eknova CLI...${NC}"

# Build the project (skip tests for faster builds during development)
if ./gradlew build -x test -q; then
    echo -e "${GREEN}âœ… Build successful${NC}"
else
    echo -e "${RED}âŒ Build failed${NC}"
    exit 1
fi

echo -e "${YELLOW}ğŸš€ Running ekn CLI...${NC}"
echo

# Run the CLI with all provided arguments
java -jar build/quarkus-app/quarkus-run.jar "$@"